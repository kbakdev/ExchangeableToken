    <style name="Theme.ExchangeableToken.BottomSheetDialogFragment.TranslucentStatus.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
