<resources>
    <!-- Base application theme. -->
    <style name="Theme.ExchangeableToken" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
                <item name="colorPrimary">@color/colorTextError</item>
                <item name="colorPrimaryVariant">@color/backgroundColor</item>
                <item name="colorOnPrimary">@color/colorText</item>
                 <item name="android:textColor">@color/colorText</item>

<!--         Secondary brand color. -->
                <item name="colorSecondary">@color/colorText</item>
                <item name="colorSecondaryVariant">@color/colorText</item>
                <item name="colorOnSecondary">@color/material_dynamic_tertiary20</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/backgroundColor</item>
        <item name="android:navigationBarColor">@color/backgroundColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ExchangeableToken.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ExchangeableToken.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExchangeableToken.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ExchangeableToken.BottomSheetDialog" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.ExchangeableToken.BottomSheetDialogFragment" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.ExchangeableToken.BottomSheetDialogFragment.FullScreen" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.ExchangeableToken.BottomSheetDialogFragment.FullScreen.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.ExchangeableToken.BottomSheetDialogFragment.FullScreen.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.ExchangeableToken.BottomSheetDialogFragment.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.ExchangeableToken.BottomSheetDialogFragment.Light" parent="ThemeOverlay.AppCompat.Light">
